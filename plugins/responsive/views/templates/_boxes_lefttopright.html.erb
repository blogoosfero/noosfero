            <%= display_topbox_content box, main_content %>
          </div>
        </div>
        <% end %>
        <div class="row boxes">
        <% if box = boxes[0] %>
            <div id="box-<%=box.id%>" class="col-lg-9 col-md-9 col-sm-8 box-container-1">
